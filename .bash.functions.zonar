# git helpers
function git-co-master {
    git switch master
    echo pulling from origin master...
    git pull origin master
    if [[ ! -d "deploy" ]]; then
	echo no deploy/
	git switch -
	return 0
    fi

    local files=$(find deploy -name '*.sops.yml')
    desops sops ${files}

    git switch -
}

function desops {
    # decrypt a list of sops files and write the results to disk, remove '.sops' from the input filename
    local to_remove=$1
    shift
    local files=$@

    for fn in $files; do
	local base=$(basename $fn)
	local parts=(${base//./ })
	declare -a newparts=()
	for part in ${parts[@]}; do
	    if [[ "${part}" != "${to_remove}" ]] ; then
		newparts+=($part)
	    fi
	done

	local folder=$(dirname $fn)
	local newfn=$(printf ".%s" "${newparts[@]}") 
	local newpath="${folder}/${newfn:1}"
	sops -d "${fn}" >${newpath}
	echo ${fn}
    done
}

function git-tag-release {
    local version=$1
    if [[ -z "$version" ]] ; then
	>&2 echo "usage: git-tag-release <version>"
	return 1
    fi
    git checkout master
    git pull origin master
    git tag -a "$version" -m "Version ${version}"
    git push origin --tags
}

